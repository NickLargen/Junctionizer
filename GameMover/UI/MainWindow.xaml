<Window x:Class="GameMover.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:viewModels="clr-namespace:GameMover.ViewModels"
        xmlns:code="clr-namespace:GameMover.Code"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"

        Title="Game Mover"
        Width="650"
        Height="400"
        MinWidth="500"
        MinHeight="300"
        mc:Ignorable="d">
    <Window.DataContext>
        <viewModels:ViewModel />
    </Window.DataContext>
    <DockPanel>
        <!--<Menu DockPanel.Dock="Top">
            ~1~<MenuItem Header="_File">
                <MenuItem Header="_New" />
                <MenuItem Header="_Open" />
                <MenuItem Header="_Save" />
                <Separator />
                <MenuItem Header="_Exit" />
            </MenuItem>@1@
            <MenuItem Checked="HideStorage"
                      Header="Hide Storage"
                      IsCheckable="True"
                      Unchecked="ShowStorage" />
        </Menu>-->
        <DockPanel Dock="Top">
            <Button Command="{Binding DeleteCurrentLocationCommand}" DockPanel.Dock="Right">Delete</Button>
            <Button Command="{Binding SaveCurrentLocationCommand}" DockPanel.Dock="Right">Save Current</Button>
            <ComboBox DockPanel.Dock="Left"
                      Margin="10 3 10 3"
                      ItemsSource="{Binding SavedPaths}"
                      SelectedItem="{Binding SelectedPath, Mode=TwoWay}" />
        </DockPanel>

        <Grid Margin="10" DockPanel.Dock="Top">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.5*" />
                <ColumnDefinition x:Name="storageColumnDefinition" Width="0.5*" />
            </Grid.ColumnDefinitions>

            <DockPanel Grid.Column="0" DataContext="{Binding InstallCollection}">
                <DockPanel DockPanel.Dock="Top" LastChildFill="False">
                    <TextBlock HorizontalAlignment="Center"
                               DockPanel.Dock="Top"
                               Text="Install Location"
                               TextTrimming="CharacterEllipsis" />
                </DockPanel>
                <DockPanel Margin="0,5,0,0"
                           HorizontalAlignment="Center"
                           DockPanel.Dock="Top"
                           LastChildFill="False">
                    <Button Command="{Binding SelectLocationCommand}" Content="Select Folder" />
                    <TextBlock Text="{Binding Location}" TextTrimming="CharacterEllipsis" />
                </DockPanel>

                <DockPanel Margin="0,5,0,0"
                           HorizontalAlignment="Center"
                           DockPanel.Dock="Bottom">
                    <Button Command="{Binding SelectFoldersNotInOtherPaneCommand}" Content="Select Not In Storage" />
                </DockPanel>

                <DockPanel HorizontalAlignment="Center"
                           DockPanel.Dock="Bottom"
                           LastChildFill="False">
                    <TextBlock Text="{Binding SelectedItems.Count}" />
                    <Button Command="{Binding CopyCommand}" Content="Copy -&gt;" />
                    <Button Command="{Binding DeleteFoldersCommand}" Content="Delete" />
                    <Button Command="{Binding DeleteJunctionsCommand}" Content="Delete Junction" />
                    <Button Command="{Binding ArchiveToStorageCommand}" Content="Archive -&gt;" />
                </DockPanel>
                <code:MultiSelectDataGrid x:Name="installGrid"
                                           ItemsSource="{Binding Folders}"
                                           CellStyle="{StaticResource CustomCellStyle}"
                                           SelectedItemsList="{Binding SelectedItems}">
                    <DataGrid.Columns>
                        <DataGridTextColumn Width="*"
                                            MinWidth="100"
                                            Binding="{Binding Name}"
                                            Header="Name" />
                        <DataGridTextColumn
                            Binding="{Binding Size, IsAsync=True, Converter={StaticResource SizeConverter}}"
                            CellStyle="{StaticResource RightAlignCell}"
                            Header="Size (MB)"
                            HeaderStyle="{StaticResource RightAlignColumnHeader}" />
                        <DataGridTextColumn Width="*"
                                            Binding="{Binding JunctionTarget}"
                                            Header="Junction Target" />
                    </DataGrid.Columns>
                </code:MultiSelectDataGrid>
            </DockPanel>


            <DockPanel Grid.Column="1" DataContext="{Binding StorageCollection}">
                <TextBlock HorizontalAlignment="Center"
                           DockPanel.Dock="Top"
                           Text="Storage Location"
                           TextAlignment="Right"
                           TextTrimming="CharacterEllipsis" />

                <DockPanel Margin="0,5,0,0"
                           HorizontalAlignment="Center"
                           DockPanel.Dock="Top">
                    <Button Command="{Binding SelectLocationCommand}" Content="Select Folder" />
                    <TextBlock Text="{Binding Location}" TextTrimming="CharacterEllipsis" />
                </DockPanel>

                <DockPanel Margin="0,5,0,0"
                           HorizontalAlignment="Center"
                           DockPanel.Dock="Bottom">
                    <Button Command="{Binding SelectFoldersNotInOtherPaneCommand}" Content="Select Not Installed" />
                </DockPanel>

                <DockPanel HorizontalAlignment="Center"
                           DockPanel.Dock="Bottom"
                           LastChildFill="False">
                    <TextBlock Text="{Binding SelectedItems.Count}" />
                    <Button Command="{Binding CopyCommand}" Content="&lt;- Copy" />
                    <Button Command="{Binding CreateJunctionCommand}" Content="&lt;- Create Junction" />
                    <Button Command="{Binding DeleteFoldersCommand}" Content="Delete" />
                </DockPanel>

                <code:MultiSelectDataGrid x:Name="storageGrid"
                                           ItemsSource="{Binding Folders}"
                                           CellStyle="{StaticResource CustomCellStyle}"
                                           SelectedItemsList="{Binding SelectedItems}">
                    <DataGrid.Columns>
                        <DataGridTextColumn
                            Width="*"
                            Binding="{Binding Name}"
                            Header="Name" />
                        <DataGridTextColumn
                            Binding="{Binding Size, IsAsync=True, Converter={StaticResource SizeConverter}}"
                            CellStyle="{StaticResource RightAlignCell}"
                            HeaderStyle="{StaticResource RightAlignColumnHeader}" 
                            Header="Size (MB)" />
                    </DataGrid.Columns>
                </code:MultiSelectDataGrid>
            </DockPanel>
        </Grid>
    </DockPanel>
</Window>