<DataGridTextColumn x:Class="GameMover.UI.Columns.LastUpdated"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:model="clr-namespace:GameMover.Model"

                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    mc:Ignorable="d"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"

                    d:DataContext="{d:DesignInstance d:Type=model:GameFolder}"

                    Binding="{Binding LastWriteTime, Converter={StaticResource DateTimeConverter}}"
                    Header="Last Updated">
    <DataGridTextColumn.CellStyle>
        <Style TargetType="DataGridCell" BasedOn="{StaticResource CustomCellStyle}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding HasFinalSize}" Value="False">
                    <Setter Property="FontStyle" Value="Italic" />
                    <Setter Property="FontWeight" Value="SemiBold" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </DataGridTextColumn.CellStyle>
</DataGridTextColumn>