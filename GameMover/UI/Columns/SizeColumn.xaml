<DataGridTextColumn x:Class="GameMover.UI.Columns.SizeColumn"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:model="clr-namespace:GameMover.Model"

                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    mc:Ignorable="d"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                    d:DataContext="{d:DesignInstance d:Type=model:GameFolder}"

                    Header="Size"
                    Binding="{Binding Size, Converter={StaticResource SizeConverter}}">
    <DataGridTextColumn.CellStyle>
        <Style TargetType="DataGridCell" BasedOn="{StaticResource RightAlignCell}">
            <Style.Triggers>
                <DataTrigger Binding="{Binding IsSearchingSubdirectories}" Value="True">
                    <Setter Property="FontStyle" Value="Italic" />
                    <Setter Property="FontWeight" Value="SemiBold" />
                </DataTrigger>
                <DataTrigger Binding="{Binding IsSearchingSubdirectories}" Value="False">
                    <Setter Property="FontStyle" Value="Normal" />
                    <Setter Property="FontWeight" Value="Normal" />
                </DataTrigger>
            </Style.Triggers>
        </Style>
    </DataGridTextColumn.CellStyle>

</DataGridTextColumn>